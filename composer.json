{
  "name": "bulbakh/telenorma",
  "description": "Implementation of a test task for Telenorma",
  "type": "project",
  "require": {
    "php": ">=8.0.0",
    "ext-pdo": "*"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "phpmd/phpmd": "^2.14",
    "friendsofphp/php-cs-fixer": "^3.37",
    "phpstan/phpstan": "^1.10",
    "vimeo/psalm": "^5.15",
    "phan/phan": "^5.4"
  },
  "autoload": {
    "psr-4": {
      "Bulbakh\\Telenorma\\": "src/"
    },
    "files": ["config/config.php"]
  },
  "authors": [
    {
      "name": "Yurii Bulbakh",
      "email": "bulbakh@gmail.com"
    }
  ],
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "phpcs": "phpcs --standard=PSR12 src",
    "phpmd": "phpmd src ansi cleancode,codesize,controversial,design,naming,unusedcode",
    "php-cs-fixer": "php-cs-fixer check src",
    "phpcpd": "php phpcpd.phar src",
    "phpstan": "phpstan analyse --level 8 src",
    "psalm": "psalm",
    "phan": "phan"
  }
}
